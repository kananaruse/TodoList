<p>
  <strong>タイトル：</strong>
  <%= @list.title %>
</p>

<p>
  <strong>内容：</strong>
  <%= @list.deadline %>
</p>

<h2>コメント</h2>
<% @list.tasks.each do |task| %>

  <p>
    <strong>コメンター：</strong>
    <%= task.name %>
  </p>

  <p>
    <strong>コメント：</strong>
    <%= task.due_date %>
  </p>
<% end %>

<h2>コメントを追加</h2>
<%= form_for( [@list, @list.tasks.build] ) do |f| %>
  <p>
    <%= f.label :name, "タスク名" %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :due_date, "期日" %><br />
    <%= f.text_area :due_date, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to '戻る', lists_path %>
